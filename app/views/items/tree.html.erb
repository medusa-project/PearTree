<% provide(:body_id, 'tree_browser') %>
<% provide(:title, @collection.title) %>
<% provide(:active_nav, 'collections') %>
<%= breadcrumb(collection: @collection, context: ItemsController::BrowseContext::BROWSING_COLLECTION) %>

<h1><%= @collection.title %></h1>

<ul class="nav nav-pills">
  <li class="nav-item">
    <%= link_to '#', class: 'nav-link active' do %>
      <i class="fa fa-level-down-alt"></i> Tree
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to collection_items_path(display: 'leaves'), class: 'nav-link' do %>
      <i class="fa fa-bars"></i> List
    <% end %>
  </li>
</ul>

<%= render partial: 'tree' %>