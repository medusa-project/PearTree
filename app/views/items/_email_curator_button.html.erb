<%
  # Uses the following locals:
  # item [Item]      Required.
  # align [Symbol]   :left or :right
  # dropup [Boolean]

  align = defined?(align) ? align : 'left'
  dropup = defined?(dropup) ? dropup : false
%>

<% mailto = curator_mailto(item) %>
<% if mailto %>
  <div class="btn-group  <%= dropup ? 'dropup' : '' %>">
    <button type="button" class="btn btn-default dropdown-toggle"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-phone"></i>
      Contact <span class="caret"></span>
    </button>
    <ul class="dropdown-menu <%= (align == :right) ? 'dropdown-menu-right' : '' %>" role="menu">
      <li>
        <%= link_to mailto do %>
          <i class="fa fa-envelope"></i> Email Curator
        <% end %>
      </li>
    </ul>
  </div>
<% end %>