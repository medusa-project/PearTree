<div id="item-show-buttons" class="btn-group pull-right" role="group">
  <button class="btn btn-danger pt-remove-from-favorites"
          data-item-id="<%= @root_item.repository_id %>">
    <i class="fa fa-heart-o"></i> Remove From Favorites
  </button>

  <button class="btn btn-default pt-add-to-favorites"
          data-item-id="<%= @root_item.repository_id %>">
    <i class="fa fa-heart"></i> Add To Favorites
  </button>

  <%= share_button(@root_item) %>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-eye"></i>
      View <span class="caret"></span>
    </button>
    <ul class="dropdown-menu dropdown-menu-right" role="menu">
      <li>
        <%= link_to @permitted_params.merge(format: :atom), target: '_blank' do %>
          <i class="fa fa-rss"></i>&nbsp;&nbsp;Atom
        <% end %>
      </li>
      <li>
        <%= link_to @permitted_params.merge(format: :json), target: '_blank' do %>
          <i class="fa fa-code"></i>&nbsp;JSON
        <% end %>
      </li>
      <% iiif_url = @root_item.iiif_image_binary&.iiif_image_url %>
      <% if iiif_url %>
        <li>
          <%= link_to iiif_url, target: '_blank' do %>
            <i class="fa fa-info-circle"></i>&nbsp;&nbsp;IIIF Image Information
          <% end %>
        </li>
      <% end %>
      <% if @root_item.has_iiif_manifest? %>
        <li>
          <%= link_to item_iiif_manifest_path(@root_item), target: '_blank' do %>
            <i class="fa fa-code"></i>&nbsp;IIIF Manifest
          <% end %>
        </li>
      <% end %>
      <% if @root_item.bib_id %>
        <li>
          <%= link_to @root_item.catalog_record_url, target: '_blank' do %>
            <i class="fa fa-book"></i>&nbsp;&nbsp;Library Catalog Record
          <% end %>
        </li>
      <% end %>
      <% if @root_item.collection.physical_collection_url.present? %>
        <li>
          <%= link_to @root_item.collection.physical_collection_url,
                      target: '_blank' do %>
            <%= icon_for(@root_item.collection) %>&nbsp;&nbsp;Physical Collection
          <% end %>
        </li>
      <% end %>
      <li class="divider"></li>
      <li>
        <%= link_to admin_collection_item_path(@root_item.collection, @root_item),
                    target: '_blank' do %>
          <i class="fa fa-lock"></i>&nbsp;&nbsp;Admin View
        <% end %>
      </li>
    </ul>
  </div>

  <%= render partial: 'email_curator_button', locals: { item: @root_item } %>

</div>
