<% provide :title, 'Collections' %>
<% provide :body_id, 'collections_index' %>
<% provide :active_nav, 'collections' %>

<%= breadcrumb %>

<div class="row">

  <div class="col-md-6">
    <h1>Local Collections</h1>
    <%= collections_as_list(@collections.select(&:published_in_dls)) %>
  </div>

  <div class="col-md-6">
    <h1>Other Library Collections</h1>
    <%= collections_as_list(@collections.select{ |c| !c.published_in_dls }) %>
  </div>

</div>
