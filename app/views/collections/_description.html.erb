<div class="text-center pt-browse-buttons">
  <% if @collection.published_in_dls %>
    <%= link_to(collection_items_path(@collection),
                class: 'btn btn-lg btn-default',
                target: @collection.published_in_dls ? '' : '_blank') do %>
      <%= icon_for(Item) %> <%= number_with_delimiter(@collection.num_public_objects) %> Digital Items
    <% end %>
  <% else %>
    <%= link_to(@collection.access_url,
                class: 'btn btn-lg btn-default',
                target: @collection.published_in_dls ? '' : '_blank') do %>
      <%= icon_for(Item) %> View Digital Items
    <% end %>
  <% end %>

  <% if @collection.package_profile == PackageProfile::FREE_FORM_PROFILE %>
    <%= link_to(collection_items_path(@collection,
                                      { fq: "-#{Item::SolrFields::PARENT_ITEM}:[* TO *]" }),
                class: 'btn btn-lg btn-default', target: '_blank') do %>
      <%= icon_for(Collection) %> Browse Folder Tree
    <% end %>
  <% end %>

  <% if @collection.physical_collection_url.present? %>
    <%= link_to('Physical Collection', @collection.physical_collection_url,
                class: 'btn btn-lg btn-default', target: '_blank') %>
  <% end %>
</div>

<div id="pt-description">
  <%= raw(@collection.description_html) ||
          simple_format(auto_link(@collection.description)) %>
</div>
