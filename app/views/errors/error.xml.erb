<%
  # Dynamic error template.
  # To use, call from a controller like this:
  #
  # render 'errors/error', status: :forbidden, locals: {
  #     status_code: 403,
  #     status_message: 'Forbidden',
  #     message: 'This item is currently not published.'
  # }
%>

<?xml version="1.0" encoding="utf-8"?>
<error>
  <statusCode><%= status_code %></statusCode>
  <statusMessage><%= status_message %></statusMessage>
  <message><%= message %></message>
</error>
