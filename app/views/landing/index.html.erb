<% provide :body_id, 'landing' %>
<% provide :title, 'Home' %>

<div class="row">
  <div class="col-sm-7">

    <div class="alert alert-info">
      <p>This is a beta version of a new digital content management and access
        system for the library's digital image collections. It is under
        construction. Please browse our
        collections, and <a href="https://illinois.edu/sb/sec/8976147">tell us
        about your experience</a>.</p>
    </div>

    <h2><%= Option.string(Option::Key::WEBSITE_NAME) %></h2>

    <%= sanitize(Option.string(Option::Key::WEBSITE_INTRO_TEXT).gsub("\n", '<br>'),
                 tags: %w(p br), attributes: %w()) %>
  </div>
  <div class="col-sm-5 hidden-xs">
    <% if @random_item %>
      <div class="pt-main-image">
        <%= link_to @random_item do %>
          <%= thumbnail_tag(@random_item, 512) %>
        <% end %>
        <%= link_to @random_item, class: 'pt-title' do %>
          <%= @random_item.title %>
        <% end %>
        <br>
        <%= link_to collection_path(@random_item.collection),
                    class: 'pt-collection-title' do %>
          <%= icon_for(@random_item.collection) %>
          <%= @random_item.collection.title %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
