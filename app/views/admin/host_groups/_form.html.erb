<%= form_for [:admin, @host_group] do |f| %>
  <% render 'admin/shared/error_messages', :object => f.object %>

  <section>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :key %>
      <%= f.text_field :key, class: 'form-control', disabled: (context == :edit) %>
    </div>
  </section>

  <div class="form-group">
    <%= f.label :pattern, 'Pattern(s) (one per line)' %>
    <%= f.text_area :pattern, rows: 8, class: 'form-control' %>
    <ul class="text-info">
      <li>Comments (starting with <code>#</code>) are allowed on their own
        lines and at the end of lines.</li>
      <li>Wildcards (<code>*</code>) are allowed in hostnames and IP
        addresses.</li>
      <li>IP address CIDR ranges are supported.</li>
    </ul>
  </div>

  <div class="float-right">
    <%= f.submit(context == :new ? 'Create Host Group' : 'Save Changes',
                 class: 'btn btn-primary') %>
  </div>
<% end %>
