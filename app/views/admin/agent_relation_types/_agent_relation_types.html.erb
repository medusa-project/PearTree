<table class="table table-striped">
  <thead>
    <th style="width: 1px"></th>
    <th style="width: 1px"></th>
    <th>Name</th>
    <th>URI</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td>
          <button type="button" class="btn btn-default btn-xs pt-edit-agent-relation-type"
                  data-toggle="modal" data-target="#pt-edit-agent-relation-type-modal"
                  data-agent-relation-type-id="<%= type.id %>">
            <i class="fa fa-pencil"></i> Edit
          </button>
        </td>
        <td>
          <%= link_to admin_agent_relation_type_path(type),
                      class: 'btn btn-danger btn-xs', method: :delete,
                      data: { confirm: 'Are you sure you want to delete '\
                              'this relation type?' } do %>
            <i class="fa fa-trash"></i> Delete
          <% end %>
        </td>
        <td><%= type.name %></td>
        <td><%= type.uri %></td>
        <td><%= type.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
