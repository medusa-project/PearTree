<div class="modal fade" id="pt-export-modal" tabindex="-1" role="dialog"
     aria-labelledby="pt-export-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag(params.merge(format: 'tsv'), method: :get) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="pt-export-modal-label">Export TSV</h4>
        </div>
        <div class="modal-body">
          <div class="radio">
            <label>
              <%= radio_button_tag('only_undescribed', 'false', checked: true) %>
              All Items
            </label>
          </div>
          <div class="radio">
            <label>
              <%= radio_button_tag('only_undescribed', 'true') %>
              Undescribed Items
            </label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Export</button>
        </div>
      <% end %>
    </div>
  </div>
</div>