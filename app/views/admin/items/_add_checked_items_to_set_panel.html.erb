<div class="modal fade" id="dl-add-checked-items-to-set-modal" tabindex="-1" role="dialog"
     aria-labelledby="dl-add-checked-items-to-set-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag(admin_collection_items_add_items_to_item_set_path(@collection)) do %>
        <div class="modal-header">
          <h4 class="modal-title">Add Checked Items To Set</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <%= select_tag(:item_set, options_for_select(current_user.item_sets.where(collection_repository_id: @collection.repository_id).map { |s| [s.name, s.id] }),
                         class: 'custom-select') %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Items</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
