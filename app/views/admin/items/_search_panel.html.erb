<%= form_tag({ controller: 'admin/items', action: 'search' }, { method: :post }) do %>
  <div class="row">
    <div class="col-sm-6 pt-elements">
      <div class="form-group form-inline">
        <%= select_tag 'elements[]', options_for_select(elements_for_select),
                       class: 'form-control' %>
        <%= text_field_tag 'terms[]', '', placeholder: 'Search Term', class: 'form-control' %>
        <button type="button" class="btn btn-xs btn-danger pt-remove-element">&minus;</button>
      </div>
      <button type="button" class="btn btn-xs btn-success pt-add-element">&plus; Add Element</button>
    </div>

    <div class="col-sm-4">
      <button type="button" class="btn btn-xs btn-default pt-check-all">Check All</button>
      <button type="button" class="btn btn-xs btn-default pt-uncheck-all">Uncheck All</button>
      <div class="pt-collections">
        <ol>
          <% collections.each do |collection| %>
            <li>
              <div class="checkbox">
                <label>
                  <%= check_box_tag('collections[]', collection.id,
                                    (params[:collections].present? and params[:collections].include?(collection.id))) %>
                  <%= collection.title %>
                </label>
              </div>
            </li>
          <% end %>
        </ol>
      </div>
    </div>

    <div class="col-sm-2 pt-system">
      <div class="radio">
        <%= label_tag do %>
            <%= radio_button_tag 'published', 'any',
                                 (params[:published] == 'any' or params[:published].blank?) %>
            Any
        <% end %>
      </div>
      <div class="radio">
        <%= label_tag do %>
            <%= radio_button_tag 'published', '1',
                                 (params[:published] == '1') %>
            Published
        <% end %>
      </div>
      <div class="radio">
        <%= label_tag do %>
            <%= radio_button_tag 'published', '0',
                                 (params[:published] == '0') %>
            Unpublished
        <% end %>
      </div>
    </div>
  </div>

  <div class="clearfix">
    <div class="pull-right">
      <input type="submit" name="clear" value="Clear" class="btn btn-default">
      <input type="submit" value="Filter" class="btn btn-primary">
    </div>
  </div>
<% end %>