<ul class="nav nav-tabs" role="tablist">
  <li role="presentation" class="active">
    <a href="#pt-metadata" aria-controls="pt-metadata" role="tab" data-toggle="tab">Metadata</a>
  </li>
  <li role="presentation">
    <a href="#pt-full-text" aria-controls="pt-full-text" role="tab" data-toggle="tab">Full Text</a>
  </li>
</ul>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="pt-metadata">
    <%= form_for([:admin, @item.collection, @item]) do |f| %>
      <table class="table pt-elements">
        <tbody>
          <% @item.collection.metadata_profile.element_defs.each do |e_def| %>
            <tr>
              <td style="width:20%">
                <label><%= e_def.label %></label>
              </td>
              <td>
                <% elements = @item.elements.select{ |e| e.name == e_def.name} %>
                <% if elements.any? %>
                  <% elements.each do |elem| %>
                    <%= admin_item_element_edit_tag(e_def.name, elem.value) %>
                  <% end %>
                <% else %>
                  <%= admin_item_element_edit_tag(e_def.name, '') %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= f.submit 'Save Metadata', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div role="tabpanel" class="tab-pane" id="pt-full-text">
    <%= form_for([:admin, @item.collection, @item]) do |f| %>
      <div class="form-group">
        <%= f.text_area :full_text, class: 'form-control' %>
      </div>
      <%= f.submit 'Save Full Text', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
