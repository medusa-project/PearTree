<%= form_for([:admin, collection], method: (context == :create) ? :post : :patch, remote: true) do |f| %>
  <div class="kq-error-messages">
    <% # populated via ajax by shared/_validation_messages.js.erb
    %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :id %>
    <%= f.text_field :id, class: 'form-control', maxlength: 50 %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: 10 %>
  </div>

  <div class="clearfix">
    <div class="pull-right">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= f.submit(context == :create ? 'Create' : 'Save Changes', class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>