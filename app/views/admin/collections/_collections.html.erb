<table class="table table-striped">
  <thead>
    <th>Collection</th>
    <th>Items (Including Children)</th>
    <th>Published in Medusa</th>
    <th>Published in DLS</th>
  </thead>
  <tbody>
    <% @collections.each do |col| %>
      <tr>
        <td><%= link_to col.title, admin_collection_path(col) %></td>
        <td><%= number_with_delimiter(col.num_top_items) %>
          (<%= number_with_delimiter(col.num_items) %>)</td>
        <td class="text-center <%= col.published ? 'bg-success' : 'bg-danger' %>">
          <%= boolean(col.published) %>
        </td>
        <td class="text-center <%= col.published_in_dls ? 'bg-success' : 'bg-danger' %>">
          <%= boolean(col.published_in_dls) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate_items(@collections, @limit, @current_page) %>
</div>