<div class="text-center">
  <%= paginate_items(@collections.total_length, @limit, @current_page) %>
</div>

<table class="table table-striped">
  <thead>
    <th>Collection</th>
    <th>Objects (Items)</th>
    <th class="text-center">Published in Medusa</th>
    <th class="text-center">Published in DLS</th>
    <th class="text-center">Harvestable</th>
  </thead>
  <tbody>
    <% @collections.each do |col| %>
      <tr>
        <td><%= link_to col.title, admin_collection_path(col) %></td>
        <td><%= number_with_delimiter(col.num_objects) %>
          (<%= number_with_delimiter(col.num_items) %>)</td>
        <td class="text-center <%= col.published_in_medusa ? 'bg-success' : 'bg-danger' %>">
          <%= boolean(col.published_in_medusa) %>
        </td>
        <td class="text-center <%= col.published_in_dls ? 'bg-success' : 'bg-danger' %>">
          <%= boolean(col.published_in_dls) %>
        </td>
        <td class="text-center <%= col.harvestable ? 'bg-success' : 'bg-danger' %>">
          <%= boolean(col.harvestable) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate_items(@collections.total_length, @limit, @current_page) %>
</div>