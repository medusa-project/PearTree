<h1><%= @collection.title %>
  <small><%= link_to(pluralize(@collection.num_items, 'item'),
                     admin_items_path('collections[]' => @collection.id)) %></small>
  <% if @collection.subtitle %>
    <br><small><%= @collection.subtitle %></small>
  <% end %>
</h1>

<div role="tabpanel">

  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#pt-configuration" aria-controls="home" role="tab" data-toggle="tab">Configuration</a>
    </li>
    <li role="presentation">
      <a href="#pt-metadata" aria-controls="home" role="tab" data-toggle="tab">Metadata</a>
    </li>
  </ul>

  <div class="tab-content">

    <!-- Configuration pane -->
    <div role="tabpanel" class="tab-pane active" id="pt-configuration">
      <dl>
        <dt>Metadata Profile</dt>
        <dd>
          <%= @collection.collection_def.metadata_profile.name %>
          <button type="button" class="btn btn-default btn-xs"
                  data-toggle="modal" data-backdrop="false"
                  data-target="#pt-metadata-profile-panel">
            <i class="fa fa-pencil"></i> Edit
          </button>
        </dd>
        <dt>Theme</dt>
        <dd>
          <%= @collection.collection_def.theme ? @collection.collection_def.theme.name :
                      raw("None (has the #{link_to('default theme', admin_themes_path)})") %>
          <button type="button" class="btn btn-default btn-xs"
                  data-toggle="modal" data-backdrop="false" data-target="#pt-theme-panel">
            <i class="fa fa-pencil"></i> Edit
          </button>
        </dd>
      </dl>
    </div>

    <!-- Metadata pane -->
    <div role="tabpanel" class="tab-pane" id="pt-metadata">
      <%= metadata_as_table(@collection) %>
    </div>

  </div> <!-- .tab-content -->

</div> <!-- .tabpanel -->

<!-- edit panel -->
<div class="modal fade" id="pt-edit-collection-modal" tabindex="-1" role="dialog"
     aria-labelledby="pt-edit-collection-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="pt-edit-collection-modal-label">Edit Collection</h4>
      </div>
      <div class="modal-body">
        <%= render partial: 'form', locals: { collection: @collection,
                                              context: :edit } %>
      </div>
    </div>
  </div>
</div>

<!-- metadata profile panel -->
<div class="modal fade pt-edit-panel" id="pt-metadata-profile-panel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_for([:admin, @collection.collection_def], remote: true) do |f| %>
        <div class="modal-header">
          <h4 class="modal-title">Metadata Profile</h4>
        </div>
        <div class="modal-body">
          <div class="pt-error-messages">
            <% # populated via ajax by shared/_validation_messages.js.erb
            %>
          </div>
          <%= select(:db_collection, :metadata_profile_id,
                     @metadata_profile_options_for_select, {},
                     class: 'form-control') %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- theme panel -->
<div class="modal fade pt-edit-panel" id="pt-theme-panel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_for([:admin, @collection.collection_def], remote: true) do |f| %>
        <div class="modal-header">
          <h4 class="modal-title">Theme</h4>
        </div>
        <div class="modal-body">
          <div class="pt-error-messages">
            <% # populated via ajax by shared/_validation_messages.js.erb
            %>
          </div>
          <%= select(:db_collection, :theme_id, @theme_options_for_select, {},
                     class: 'form-control') %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
