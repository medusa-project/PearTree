<% provide :title, 'Metadata Profiles' %>
<% provide :body_id, 'metadata_profiles' %>
<% provide :active_nav, 'metadata' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_root_path %></li>
  <li class="active">Metadata Profiles</li>
</ol>

<div class="btn-group pull-right">
  <button type="button" class="btn btn-default" data-toggle="modal"
          data-target="#pt-add-profile-modal">
    <span class="fa fa-plus"></span> Add Profile
  </button>
  <!-- Import button -->
  <button type="button" class="btn btn-default" data-toggle="modal"
          data-target="#pt-import-modal">
    <i class="fa fa-upload"></i> Import&hellip;
  </button>
</div>

<h1>Metadata Profiles</h1>

<div class="alert alert-info">
  The default profile will be used in cross-collection contexts.
</div>

<table class="table table-striped pt-predicates">
  <thead>
    <th style="width:1px"></th>
    <th>Name</th>
    <th>Collections</th>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td class="text-center">
          <% if profile.default %>
            <span class="label label-success">Default</span>
          <% else %>
            <%= link_to 'Set As Default',
                        admin_metadata_profile_path(profile, metadata_profile: { default: true }),
                        class: 'btn btn-default btn-xs', method: :patch %>
          <% end %>
        </td>
        <td><%= link_to profile.name, admin_metadata_profile_path(profile) %></td>
        <td><%= profile.collections.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Add-profile modal -->
<div class="modal fade" id="pt-add-profile-modal" tabindex="-1" role="dialog"
     aria-labelledby="pt-add-profile-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="pt-add-profile-modal-label">Add Profile</h4>
      </div>
      <div class="modal-body">
        <%= render partial: 'form', locals: { metadata_profile: @new_profile,
                                              context: :new } %>
      </div>
    </div>
  </div>
</div>

<!-- Import-profile modal -->
<div class="modal fade" id="pt-import-modal" tabindex="-1" role="dialog"
     aria-labelledby="pt-import-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag(admin_metadata_profile_import_path(format: :json),
                   { multipart: true }) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="pt-import-modal-label">Import Metadata Profile</h4>
        </div>
        <div class="modal-body">
          <%= file_field_tag('metadata_profile') %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Import</button>
        </div>
      <% end %>
    </div>
  </div>
</div>