<% provide :title, 'Available Elements' %>
<% provide :body_id, 'available_elements' %>
<% provide :active_nav, 'metadata' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_root_path %></li>
  <li class="active">Available Elements</li>
</ol>

<div class="btn-group pull-right">
  <!-- Add Element button -->
  <button type="button" class="btn btn-default" data-toggle="modal"
          data-target="#pt-add-element-modal">
    <span class="fa fa-plus"></span> Add Element
  </button>
  <!-- Export button -->
  <%= link_to params.merge(format: 'json'), type: 'button', class: 'btn btn-default' do %>
    <i class="fa fa-download"></i> Export
  <% end %>
  <!-- Import button -->
  <button type="button" class="btn btn-default" data-toggle="modal"
          data-target="#pt-import-modal">
    <i class="fa fa-upload"></i> Import&hellip;
  </button>
</div>

<h1>Available Elements</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th style="width: 1px"></th>
      <th style="width: 1px"></th>
      <th>Element</th>
      <th>Description</th>
      <th># of Occurrences</th>
    </tr>
  </thead>
  <tbody>
    <% @elements.each do |element| %>
      <% num_usages_by_items = element.num_usages_by_items %>
      <tr>
        <td>
          <button type="button" class="btn btn-default btn-xs pt-edit-element"
                  data-toggle="modal" data-target="#pt-edit-element-modal"
                  data-element-id="<%= element.id %>">
            Edit
          </button>
        </td>
        <td>
          <% if num_usages_by_items > 0 %>
            <%= link_to 'Delete', '#', class: 'btn btn-danger btn-xs',
                        disabled: true %>
          <% else %>
            <%= link_to 'Delete', admin_available_element_path(element),
                        class: 'btn btn-danger btn-xs', method: :delete,
                        data: { confirm: 'Are you sure you want to delete '\
                        'this element?' } %>
          <% end %>
        </td>
        <td><%= link_to element.name, admin_available_element_path(element) %></td>
        <td><%= element.description %></td>
        <td><%= num_usages_by_items %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Add-element modal -->
<div class="modal fade" id="pt-add-element-modal" tabindex="-1" role="dialog"
     aria-labelledby="pt-add-element-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="pt-add-element-modal-label">Add Element</h4>
      </div>
      <div class="modal-body">
        <%= render partial: 'form', locals: { element: @new_element,
                                              context: :new } %>
      </div>
    </div>
  </div>
</div>

<!-- Edit-element modal -->
<div class="modal fade" id="pt-edit-element-modal" tabindex="-1" role="dialog"
     aria-labelledby="pt-edit-element-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="pt-edit-element-modal-label">Edit Element</h4>
      </div>
      <div class="modal-body">
        <% # will be populated via XHR %>
      </div>
    </div>
  </div>
</div>

<!-- Import-elements modal -->
<div class="modal fade" id="pt-import-modal" tabindex="-1" role="dialog"
     aria-labelledby="pt-import-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_tag(admin_available_elements_import_path(format: :json),
                   { multipart: true }) do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="pt-import-modal-label">Import Elements</h4>
        </div>
        <div class="modal-body">
          <%= file_field_tag('elements') %>

          <hr>

          <div class="radio">
            <label>
              <%= radio_button_tag('import_mode',
                                   Admin::AvailableElementsController::ImportMode::MERGE, true,
                                   'aria-described-by' => 'pt-merge-help') %>
              Merge
            </label>
            <span id="pt-merge-help" class="help-block">
              Create any new elements, and update existing elements, but don't
              delete anything.
            </span>
          </div>

          <div class="radio">
            <label>
              <%= radio_button_tag('import_mode',
                                   Admin::AvailableElementsController::ImportMode::REPLACE, false,
                                   'aria-described-by' => 'pt-only-create-help') %>
              Replace
            </label>
            <span id="pt-only-create-help" class="help-block">
              Replace the current set of available elements with the ones being
              imported.
            </span>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Import</button>
        </div>
      <% end %>
    </div>
  </div>
</div>