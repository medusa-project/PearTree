<%= form_for([:admin, vocabulary_term], remote: true) do |f| %>
  <div class="dl-error-messages">
    <% # populated via ajax by shared/_validation_messages.js.erb
    %>
  </div>

  <div class="form-group">
    <%= f.label :string %>
    <%= f.text_field :string, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :uri, 'URI' %>
    <%= f.text_field :uri, class: 'form-control' %>
  </div>

  <%= f.hidden_field :vocabulary_id, value: vocabulary_term.vocabulary.id %>

  <div class="clearfix">
    <div class="pull-right">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= f.submit(context == :new ? 'Create Term' : 'Edit Term',
                   class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>
