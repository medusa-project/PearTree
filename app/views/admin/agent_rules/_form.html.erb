<%
  # @param agent_rule [AgentRule]
  # @param context [Symbol] :new or :edit
%>

<%= form_for([:admin, agent_rule], remote: true) do |f| %>
  <div class="pt-error-messages">
    <% # populated via ajax by shared/_validation_messages.js.erb
    %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :abbreviation %>
    <%= f.text_field :abbreviation, class: 'form-control' %>
  </div>

  <div class="clearfix">
    <div class="pull-right">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= f.submit(context == :new ? 'Create Agent Rule' : 'Edit Agent Rule',
                   class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>
