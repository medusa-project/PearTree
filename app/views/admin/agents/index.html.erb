<% provide :title, 'Agents' %>
<% provide :body_id, 'admin_agents_index' %>
<% provide :active_nav, 'metadata' %>

<%= admin_breadcrumb({ label: 'Home', url: admin_root_path },
                     { label: 'Agents' }) %>

<div class="btn-group float-right">
  <!-- Add Agent button -->
  <button type="button" class="btn btn-light" data-toggle="modal"
          data-target="#dl-add-agent-modal">
    <span class="fa fa-plus"></span> Add Agent
  </button>
</div>

<h1>Agents</h1>

<div class="card">
  <div class="card-body">
    <%= form_tag admin_agents_path, method: 'get', class: 'dl-filter' do %>
      <div class="form-inline">
        <%= search_field_tag :q, params[:q], placeholder: 'Filter',
                             class: 'form-control' %>
      </div>
    <% end %>
  </div>
</div>

<div id="dl-agents">
  <%= render 'agents' %>
</div>

<%= render partial: 'add_modal', locals: { agent: @new_agent,
                                           context: :new } %>

<!-- Edit-agent modal -->
<div class="modal fade" id="dl-edit-agent-modal" tabindex="-1" role="dialog"
     aria-labelledby="dl-edit-agent-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="dl-edit-agent-modal-label">Edit Agent</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% # will be populated via XHR %>
      </div>
    </div>
  </div>
</div>
