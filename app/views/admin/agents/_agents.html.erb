<div class="text-center">
  <%= paginate(@agent_count, @limit, @current_page, true) %>
</div>

<table class="table table-striped">
  <thead>
    <th style="width: 1px"></th>
    <th style="width: 1px"></th>
    <th>Name</th>
  </thead>
  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td>
          <button type="button" class="btn btn-default btn-xs pt-edit-agent"
                  data-toggle="modal" data-target="#pt-edit-agent-modal"
                  data-agent-id="<%= agent.id %>">
            <i class="fa fa-pencil"></i> Edit
          </button>
        </td>
        <td>
          <%= link_to admin_agent_path(agent),
                      class: 'btn btn-danger btn-xs', method: :delete,
                      data: { confirm: 'Are you sure you want to delete '\
                              'this agent?' } do %>
            <i class="fa fa-trash"></i> Delete
          <% end %>
        </td>
        <td><%= link_to agent.name, admin_agent_path(agent) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate(@agent_count, @limit, @current_page, true) %>
</div>